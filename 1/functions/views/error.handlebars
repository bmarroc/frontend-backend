<script>
    window.addEventListener("load", (event) => {
        var contentProvider = new ContentProvider("innerdatabase.db");
        return contentProvider.addDB().then(() => {
            return contentProvider.deleteSession();
        }).then(() => {
            document.cookie = [["__session", ""].join("="), "max-age=0"].join(";");
            return firebase.auth().signOut();
        }).then(() => {
            window.location = "/";
            return null;
        }).catch((error) => {
